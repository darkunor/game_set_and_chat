<h1>Forums</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td>
      <%= link_to forum.name, forum %><br>
      <%= forum.description %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, @forum %>
  <%= link_to 'New Forum', new_forum_path %>
<% end %>
