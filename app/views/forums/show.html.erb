<hr>
<h2>
  <%= @forum.name %>
</h2>
<hr>
<h2>Topics</h2>
<hr>
<% @forum.topics.each do |topic| %>
 <h4><%= link_to topic.title, topic %></h4>
 <p> by <%= topic.user.username %></p>
<% end %>
<hr>
<% if can? :update, @forum %>
<button><%= link_to 'Edit', edit_forum_path(@forum) %></button>
<% end %>

<button><%= link_to 'Back', forums_path %></button>
<hr>


<% if can? :create, Topic %>
<%= link_to 'Create A Topic', new_topic_path(forum_id: @forum.id) %>
<% end %>