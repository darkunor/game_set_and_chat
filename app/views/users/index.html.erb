<h2>Users</h2>

<hr>

<% @users.each do |user| %>
  <h3><%= link_to user.username, user %></h3>
  <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" if can? :update, user %>
  <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" if can? :destroy, user %>
  <hr>
<% end %>

<hr>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
